# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/whatsway

# Session Configuration
SESSION_SECRET=your_random_session_secret_minimum_32_characters_long

# WhatsApp Business API Configuration
WHATSAPP_API_VERSION=v23.0
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# MM Lite API Configuration (Optional - for high volume marketing)
MM_LITE_API_KEY=your_mm_lite_api_key
MM_LITE_API_URL=https://api.mmlite.com

# Application Configuration
APP_URL=https://your-domain.com
PORT=5000
NODE_ENV=production

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Optional: Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Optional: Sentry Configuration (for error tracking)
SENTRY_DSN=your_sentry_dsn

# Debug Mode (set to true for verbose logging)
DEBUG=false
LOG_LEVEL=info