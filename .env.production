# Database Configuration
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/whatsway
POSTGRES_PASSWORD=your_secure_password_here

# Session Configuration
SESSION_SECRET=your_random_session_secret_minimum_32_characters_long_change_this

# WhatsApp Business API Configuration
WHATSAPP_API_VERSION=v23.0
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_change_this

# Application Configuration
APP_URL=https://your-domain.com
APP_PORT=5001
NODE_ENV=production

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379

# Optional: Sentry Configuration (for error tracking)
# SENTRY_DSN=your_sentry_dsn

# Debug Mode
DEBUG=false
LOG_LEVEL=info